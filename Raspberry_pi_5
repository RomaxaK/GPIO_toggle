#include <stdio.h>
#include <stdlib.h>
#include <unistd.h>
#include <lgpio.h>

#define REQUEST_GPIO 17  // GPIO for request signal
#define GRANT_GPIO 27    // GPIO for grant signal
#define DELAY_US 1       // Minimal delay in microseconds

int main() {
    int chip;
    
    // Open GPIO chip 0 (Raspberry Pi uses gpiochip0)
    chip = lgpiochip_open(0);
    if (chip < 0) {
        perror("Failed to open GPIO chip");
        return 1;
    }

    // Set GPIOs as output
    lgpio_claim_output(chip, REQUEST_GPIO, 0);
    lgpio_claim_output(chip, GRANT_GPIO, 0);

    printf("Starting Request-Grant signal test\n");

    while (1) {
        lgpio_write(chip, REQUEST_GPIO, 1);
        usleep(DELAY_US);

        lgpio_write(chip, GRANT_GPIO, 1);
        usleep(DELAY_US);

        lgpio_write(chip, REQUEST_GPIO, 0);
        lgpio_write(chip, GRANT_GPIO, 0);

        usleep(100000);  // 100ms delay
    }

    lgpiochip_close(chip); // Clean up (never reached in this loop)
    return 0;
}
