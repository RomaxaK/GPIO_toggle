try:
    if "MR" in self.cmd_dict:
        dev.set_attribute("MR", int(self.cmd_dict["MR"]))
    if "SSA" in self.cmd_dict:
        dev.set_attribute("SSA", int(self.cmd_dict["SSA"]))
    if "SPAN" in self.cmd_dict:
        dev.set_attribute("SPAN", int(self.cmd_dict["SPAN"]))
    if "PM" in self.cmd_dict:
        dev.set_attribute("PM", self.cmd_dict["PM"].upper())
    if "SETTXDATA" in self.cmd_dict:
        dev.set_attribute("SETTXDATA", self.cmd_dict["SETTXDATA"])
except Exception as e:
    raise ValueError(f"Invalid attribute value in tx.txt: {e}")
